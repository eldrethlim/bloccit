<!-- app/views/posts/show.html.erb -->

<br><br>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <h1 class="panel-title"><%= markdown @post.title %></h1>
  </div>

  <div class="col-md-8">
    <%= image_tag(@post.image) %>
    <p><%= markdown @post.body %></p>
  </div>
  <div class="col-md-6">
  <% if policy(@post).edit? %>
    <%= link_to "Edit Post", edit_topic_post_path(@topic,@post), class: 'btn btn-success' %>
  <% end %>

  <% if policy(@post).edit? %>
    <%= link_to "Delete Post", [@topic, @post], method: :delete, clasS: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
  <% end %>

  <% if policy(Comment.new).create? %>
    <%= link_to "New Comment", new_post_comment_path(@post), class: 'btn btn-success' %>
  <% end %>
</div>
</div>
<br>
  <div class="col-md-8">
    <p class="lead">Comments</p>
    <% @comments.each do |comment| %>
      <div class="col-md-12">
        <%= image_tag(comment.image) %>
        <%= comment.body %>
        <br>
        <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
        submitted <%= time_ago_in_words(comment.created_at) %> ago by
        <%= comment.user.name %><br>
        <% if policy(comment).edit? %>
          <%= link_to "Edit Comment", edit_post_comment_path(@post,comment), class: 'btn btn-success' %>
        <% end %>
        <% if policy(comment).destroy? %>
          <%= link_to "Delete Comment", [@post, comment], method: :delete, class: 'btn btn-danger', data: 'Are you sure you want to delete this comment?' %>
        <% end %>
      </div>
    <% end %>
    <%= will_paginate @comments %>
</div>

