<!-- app/views/posts/show.html.erb -->

<br><br>

<div class="row">
  <div class="col-md-8">
    <%= render partial: 'votes/pvoter', locals: { topic: @topic, post: @post } %>
    <h1 class="panel-title"><%= markdown @post.title %></h1>
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
  </div>

  <div class="col-md-8">
    <%= image_tag(@post.image) %>
    <p><%= markdown @post.body %></p>
  </div>
  <div class="col-md-6">
  <% if policy(@post).edit? %>
    <%= link_to "Edit Post", edit_topic_post_path(@topic,@post), class: 'btn btn-success' %>
  <% end %>

  <% if policy(@post).edit? %>
    <%= link_to "Delete Post", [@topic, @post], method: :delete, clasS: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
  <% end %>

  <% if policy(Comment.new).create? %>
    <%= link_to "New Comment", new_post_comment_path(@post), class: 'btn btn-success' %>
  <% end %>

  <div>
    <h3><%= pluralize(@post.points, 'point') %></h3>
    <small>
      <%= pluralize(@post.up_votes, 'up vote') %>,
      <%= pluralize(@post.down_votes, 'down vote') %>
    </small>
  </div>
  <%= render partial: 'favourites/favourite', locals: { topic: @topic, post: @post} %>
</div>
</div>
<br>
  <div class="col-md-8">
    <p class="lead">Comments</p>
    <% @comments.each do |comment| %>
      <div class="col-md-12">
        <%= render partial: 'votes/cvoter', locals: { post: @post, comment: comment } %>
        <%= image_tag(comment.image) %>
        <%= comment.body %>
        <br>
        <%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
          <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
          submitted <%= time_ago_in_words(comment.created_at) %> ago by
          <%= comment.user.name %><br>
          <% if policy(comment).edit? %>
            <%= link_to "Edit Comment", edit_post_comment_path(@post,comment), class: 'btn btn-success' %>
          <% end %>
          <% if policy(comment).destroy? %>
            <%= link_to "Delete Comment", comment_url_helper(comment), method: :delete, class: 'btn btn-danger', data: 'Are you sure you want to delete this comment?' %>
          <% end %>
        <% end %>  
      </div>
    <% end %>
    <%= will_paginate @comments %>
</div>

