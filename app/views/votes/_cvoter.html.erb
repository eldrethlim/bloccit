<!-- app/views/votes/_cvoter.html.erb -->

<% if policy( Vote.new).create? %>
  <div class="vote-arrows pull-left">
    <div>
      <%= link_to " ", 
        post_comment_c_up_vote_path(post, comment), 
          class: "glyphicon glyphicon-chevron-up #{(current_user.voted(comment) && current_user.voted(comment).up_vote?) ? 'voted' : '' }" %>
    </div>
    <div>
      <strong><%= comment.points %></strong>
    </div>
    <div>
      <%= link_to " ",
        post_comment_c_down_vote_path(post, comment),
          class: "glyphicon glyphicon-chevron-down #{(current_user.voted(comment) && current_user.voted(comment).down_vote?) ? 'voted' : ''}" %>
    </div>
  </div>
<% end %>